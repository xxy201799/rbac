<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxy.rbac_cloud_service_platform.mapper.ServiceConfigMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.xxy.rbac_cloud_service_platform.entity.ServiceConfig">
		<id column="id" property="id"/>
		<result column="register_type" property="registerType"/>
		<result column="create_time" property="createTime"/>
		<result column="update_time" property="updateTime"/>
		<result column="registerAddress" property="registerAddress"/>
		<result column="cluster_mode_flag" property="clusterModeFlag"/>
		<result column="user_name" property="userName"/>
		<result column="user_id" property="userId"/>
		<result column="state" property="state"/>
		<result column="config_address" property="configAddress"/>
		<result column="password" property="password"/>
		<result column="project_name" property="projectName"/>
	</resultMap>

	<!--关联查询部门列表-->
	<select id="queryServiceConfigByState" resultType="com.xxy.rbac_cloud_service_platform.entity.ServiceConfig">
		SELECT
			*
		FROM
			service_config
		WHERE state = #{state}
	</select>

</mapper>
